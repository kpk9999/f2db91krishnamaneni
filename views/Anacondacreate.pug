extends layout
block content
 h1= title
 form(id='AnacondaForm', action="/resource/Anaconda", method="POST")
  div.form-group
   label.AnacondaAttr(for='Ananconda_color') Anaconda Color
   input#Ananconda_color(type='text', name='Ananconda_color')
  div.form-group
   label.AnacondaAttr(for='Ananconda_petname') Anaconda name
   input#Ananconda_petname(type='text', name='Ananconda_petname')
  div.form-group
   label.AnacondaAttr(for='Ananconda_price') Anaconda Cost 
   input#Ananconda_price(type='text', name='Ananconda_price')
  input(type="submit")
 script.
  document.forms['AnacondaForm'].addEventListener('submit', (event) => {
    event.preventDefault();
    fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) 
    }).then((resp) => {
        return resp.json();
    }).then((body) => {
        alert("Save succeded")
    }).catch((error) => {
        alert("Save failed " + error )
    });
   }); 